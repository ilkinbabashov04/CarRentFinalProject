@model List<GetCarPricingWithTimePeriodDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UiLayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Per Day Rate</th>
								<th class="bg-dark heading">Per Week Rate</th>
								<th class="bg-black heading">Per Month Rate</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tbody>
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
									<td class="product-name">
										<h3>@item.Brand @item.Model</h3>
										<p class="mb-0 rated">
											<span>rated:</span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
										</p>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="/Reservation/Index/@item.CarId">Rent a car</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">$</small>@item.DailyAmount</span>
												<span class="per">/per hour</span>
											</h3>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="/Reservation/Index/@item.CarId">Rent a car</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">$</small>@item.WeeklyAmount</span>
												<span class="per">/per day</span>
											</h3>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="/Reservation/Index/@item.CarId">Rent a car</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">$</small>@item.MonthlyAmount</span>
												<span class="per">/per month</span>
											</h3>
										</div>
									</td>
								</tr>
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</div>
</section>