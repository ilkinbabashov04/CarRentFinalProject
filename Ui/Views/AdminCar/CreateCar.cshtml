@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">New Car Login</h4>
                        <p class="card-subtitle mb-4">You are required to enter all the details of the cars before proceeding. Once all the necessary information has been provided, please press the Save button to complete the operation.</p>

                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputBrand">Brand</label>
                                @Html.DropDownListFor(model => model.BrandId, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for ="Model" placeholder="Model">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Cover Image</label>
                                <input type="file" class="form-control" name="CoverImage">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Enter Km">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Transmission</label>
                                @Html.DropDownListFor(model => model.Transmission, (List<SelectListItem>)ViewBag.TransmissionOptions, "Select Transmission", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Seat</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Enter seat count">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Luggage</label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Enter luggage weight">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel">Fuel</label>
                                @Html.DropDownListFor(model => model.Fuel, (List<SelectListItem>)ViewBag.FuelOptions, "Select Fuel Type", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Description</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Description" placeholder="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBigImageUrl">Big Image</label>
                                <input type="file" class="form-control" name="BigImage">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Per Day Price</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="PerDayPrice" placeholder="Per Day Price">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Per Week Price</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="PerWeekPrice" placeholder="Per Week Price">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Per Month Price</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="PerMonthPrice" placeholder="Per Month Price">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
