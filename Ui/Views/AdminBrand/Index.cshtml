@model List<BrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Brands List</h4>
                        <p class="card-subtitle mb-4">
                            You can add, edit new car brands through the list of brands, and remove a brand from here.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand Name</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Cars belong to this Brand</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminBrand/DeleteBrand/@item.BrandId" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.BrandId" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.BrandId" class="btn btn-outline-dark">Cars belong to Brand</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/AdminBrand/CreateBrand" class="btn btn-outline-primary">Add new Brand</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


