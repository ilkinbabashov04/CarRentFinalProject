@model List<AllBlogsWithAuthorDto>
@{
    int count = 0;
}
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Recent Blogs</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Author's Blogs
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tr>
                        <th>#</th>
                        <th>Blog Title</th>
                        <th>Author</th>
                        <th>Open Blog</th>
                    </tr>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal">@count</h5></td>
                                <td> <h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5></td>
                                <td><h5 class="font-size-17 mb-1 font-weight-normal">@item.AuthorName</h5></td>
                                <td><h5 class="font-size-15 mb-1 font-weight-normal"><a href="/Blog/BlogDetail/@item.Id" class="btn btn-primary">Open Blog</a></h5></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div> 
    </div> 
</div> 