@model CreateHomeDto
@{
    ViewData["Title"] = "CreateHome";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">New Home Details</h4>
                        <p class="card-subtitle mb-4">You can enter data in the Banner field using the panel below. To maintain the design integrity, please ensure that only one Banner entry remains by deleting the previous one before adding a new entry.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Add Home Banner">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Description</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Add Home Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideDescription">Video Description</label>
                                <input type="text" class="form-control" id="exampleInputVideDescription" asp-for="VideoDescription" placeholder="Add Vide Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Video Url</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Please add the video's YouTube embed URL.">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Home Details</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




