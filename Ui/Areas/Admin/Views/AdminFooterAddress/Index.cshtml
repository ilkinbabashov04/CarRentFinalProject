@model List<FooterAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Footer and Contact Address Page</h4>
                        <p class="card-subtitle mb-4">Operations related to the Footer, Contact, and Address sections, including detailed information and management functionalities. Additionally, address details can be added via Google Maps.</p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th>Mail</th>
                                        <th>Description</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Address</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Mail</td>
                                            <td>@item.Description</td>
                                            <td><a href="/Admin/AdminFooterAddress/DeleteFooterAddress/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminFooterAddress/UpdateFooterAddress/@item.Id" class="btn btn-outline-success">Update</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Admin/AdminFooterAddress/CreateFooterAddress" class="btn btn-outline-primary">Add new Footer Address</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







