@model CreateFooterAddressDto

@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Footer Address Page</h4>
                        <p class="card-subtitle mb-4">You can input data into the Address field using the field provided below. To maintain the integrity of the theme, please make only one data entry. If existing data is available, edit it accordingly. If you enter new data, ensure that the previous entry is deleted.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputAddress">Address</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Add Address">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Description</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Add Author Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Phone</label>
                                <input type="tel" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Add Phone number">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputMail">Mail</label>
                                <input type="email" class="form-control" id="exampleInputMail" asp-for="Mail" placeholder="Add Mail address">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Address Details</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>