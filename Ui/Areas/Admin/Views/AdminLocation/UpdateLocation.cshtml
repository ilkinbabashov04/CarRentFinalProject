@model LocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Location Update Page</h4>
                        <p class="card-subtitle mb-4">
                            This page is used to enter location details for vehicle pick-up and drop-off points. Please ensure that all information is filled out completely.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group">
                                <label for="exampleInputLocation">Location</label>
                                <input type="text" class="form-control" id="exampleInputLocation" asp-for="Name" placeholder="Add Location">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Update Location Details</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>