@model List<LocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Location Page</h4>
                        <p class="card-subtitle mb-4">
                            The location section displays the pick-up and drop-off points for vehicles on the homepage and car rental page. Below are the names of the car rental locations. You can access the map details for each location using the button on the right.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Location</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Open Location</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminLocation/DeleteLocation/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminLocation/UpdateLocation/@item.Id" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/Admin/AdminLocation/LocationDetail/@item.Id" class="btn btn-outline-success">Open Location</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Admin/AdminLocation/CreateLocation" class="btn btn-outline-primary">Add new Location</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>