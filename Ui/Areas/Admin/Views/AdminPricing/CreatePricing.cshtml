@model CreatePricingDto
@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">New Pricing Details</h4>
                        <p class="card-subtitle mb-4">You can enter data in the Prcing field using the panel below.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Pricing Period</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Add Pricing Period Name(Daily, Monthly)">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Pricing Details</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






