@model PricingDto
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Pricing Details Update Page</h4>
                        <p class="card-subtitle mb-4">You can enter data in the Prcing field using the panel below.</p>

                        <form method="post">
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group">
                                <label for="exampleInputName">Pricing Period</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Add Pricing Period Name(Daily, Monthly)">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Update Pricing Details</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








