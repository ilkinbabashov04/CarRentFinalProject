@model List<AllBlogsWithAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog List Page</h4>
                        <p class="card-subtitle mb-4">You can view the deletion, update, and blog list access related to blogs. The process of adding a new blog is not performed by the admin. To add a blog, you must log in to the system as a writer. Each writer can only edit their own blogs. To do so, you can log in via the Login/WriterLogin page in the application.</p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Category</th>
                                        <th>Created Date</th>
                                        <th>Add Tags</th>
                                        <th>Delete</th>
                                        <th>Open Blog</th>
                                        <th>Blog Comments</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td>@item.AuthorName</td>
                                            <td>@item.CategoryName</td>
                                            <td>@item.CreatedDate</td>
                                            <td><a href="/Admin/AdminBlog/AddTagCloud/@item.Id" class="btn btn-outline-success">Add Tag</a></td>
                                            <td><a href="/Admin/AdminBlog/DeleteBlog/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Blog/BlogDetail/@item.Id" class="btn btn-outline-dark">Open Blogs</a></td>
                                            <td><a href="/Admin/AdminComment/Index/@item.Id" class="btn btn-outline-warning">Blog Comments</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Admin/AdminBlog/CreateBlog" class="btn btn-outline-primary">Add new Blog</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






