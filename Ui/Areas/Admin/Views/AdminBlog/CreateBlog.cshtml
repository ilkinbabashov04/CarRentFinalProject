@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">New Blog</h4>
                        <p class="card-subtitle mb-4">You are required to enter all the details of the cars before proceeding. Once all the necessary information has been provided, please press the Save button to complete the operation.</p>

                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputBrand">Author</label>
                                @Html.DropDownListFor(model => model.AuthorId, (List<SelectListItem>)ViewBag.AuthorValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBrand">Category</label>
                                @Html.DropDownListFor(model => model.CategoryId, (List<SelectListItem>)ViewBag.CategoryValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Title</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Title" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Cover Image</label>
                                <input type="file" class="form-control" name="CoverImage">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Big Image</label>
                                <input type="file" class="form-control" name="BigImage">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Description</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Description" placeholder="Description">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

