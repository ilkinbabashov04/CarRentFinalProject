@model List<SocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">SocialMedia Page</h4>
                        <p class="card-subtitle mb-4">
                            This page allows you to manage information related to your social media accounts.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                        <th>Open</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminSocialMedia/DeleteSocialMedia/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-outline-dark">Open</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Add new Social Media</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


