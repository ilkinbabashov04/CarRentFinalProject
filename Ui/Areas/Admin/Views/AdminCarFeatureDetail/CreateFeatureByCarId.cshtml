@model List<FeatureDto>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Car Features Page</h4>
                        <p class="card-subtitle mb-4">Add Car Features, including comprehensive details.</p>
                        <form method="post">
                            @for (int i = 0; i <Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].Id" />
                                    <input type="hidden" asp-for="@Model[i].Name" />
                                    <input type="checkbox" class="form-check-input" />
                                    <label class="form-check-label">@Model[i].Name</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-primary">Add Car Features</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>