@model List<CommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Comment List Page - Blog Id: @ViewBag.v</h4>
                        <p class="card-subtitle mb-4"> On this page, you can view the list of comments made on the blog. You have the option to remove or reactivate relevant comments using the buttons below each comment.</p>
                        @foreach(var item in Model)
                        {
                            count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Comment - @count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">
                                            @item.Description
                                        </p>
                                        <a href="/Admin/AdminComment/DeleteComment/@item.Id" class="btn btn-primary waves-effect waves-light">Delete Comment</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








