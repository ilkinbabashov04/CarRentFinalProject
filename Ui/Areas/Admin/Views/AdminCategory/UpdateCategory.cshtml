@model CategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Category Update Page</h4>
                        <p class="card-subtitle mb-4">You can update data into the Blog Category field using the field provided below.</p>
                        <form method="post">
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group">
                                <label for="exampleInputTitle">Category Name</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Add Category Name">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Update Category Details</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

